<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!--
     Use Guice-based ServletConfig
     see http://code.google.com/p/google-guice/wiki/Servlets
    -->
  <filter>
    <filter-name>guiceFilter</filter-name>
    <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>guiceFilter</filter-name>
    <url-pattern>*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <listener>
    <listener-class>com.goodow.moon.web.server.DefaultServletConfig</listener-class>
  </listener>

  <!--
     Require login & SSL for all pages by default
     see http://code.google.com/appengine/docs/java/config/webxml.html
    -->
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
    <!-- <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint> -->
  </security-constraint>

  <!--
     Admin-only pages
    -->
  <!-- <security-constraint>
    <web-resource-collection>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint> -->

  <!--
     Task queue servlets.  We require admin as described in
     http://code.google.com/appengine/docs/java/taskqueue/overview-push.html#Securing_URLs_for_Tasks
    -->
  <!-- <security-constraint>
    <web-resource-collection>
      <url-pattern>/taskqueue/*</url-pattern>
      <url-pattern>/_ah/queue/__deferred__</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint> -->

  <!--
     Object-store pages - no constraints, constraints are
     programmatically imposed.
    -->
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/store/mutate</url-pattern>
    </web-resource-collection>
  </security-constraint>

  <!--
     Pages that don't require login
    -->
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/loggedout.html</url-pattern>
      <url-pattern>/favicon.ico</url-pattern>
      <url-pattern>/version</url-pattern>
      <url-pattern>/google.html</url-pattern>
    </web-resource-collection>
  </security-constraint>

  

</web-app>
